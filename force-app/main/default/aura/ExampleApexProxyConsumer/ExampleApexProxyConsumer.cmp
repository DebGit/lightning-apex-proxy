<aura:component controller="ExampleApex">
	
	<aura:attribute name="callbackValue" type="String" description="Set by apexProxy onSuccess callback" />
    <c:ApexProxy aura:id="apexProxy" />
    <aura:handler name="init" value="{!this}" action="{!c.init}" />    
    
    <div class="slds-text-heading_large">APEX PROXY</div>
    <aura:if isTrue="{!v.callbackValue}">
        <article class="slds-tile slds-box">
            <h3 class="slds-tile__title">callbackValue : {!v.callbackValue}</h3>
        </article>
    </aura:if>
	
</aura:component>